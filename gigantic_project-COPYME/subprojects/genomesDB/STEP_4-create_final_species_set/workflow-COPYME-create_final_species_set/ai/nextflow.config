// ============================================================================
// LOAD YAML CONFIGURATION
// ============================================================================

import org.yaml.snakeyaml.Yaml

def loadConfig() {
    def configFile = new File("${projectDir}/../final_species_set_config.yaml")
    if (configFile.exists()) {
        def yaml = new Yaml()
        return yaml.load(configFile.text)
    }
    return [:]
}

def userConfig = loadConfig()

// ============================================================================
// PARAMETERS FROM YAML
// ============================================================================

params {
    // Input paths
    step2_proteomes = userConfig?.inputs?.step2_proteomes ?: "../STEP_2-standardize_and_evaluate/workflow-RUN_01-standardize_evaluate_build_gigantic_genomesdb/OUTPUT_pipeline/2-output/gigantic_proteomes_cleaned"
    step3_blastp = userConfig?.inputs?.step3_blastp ?: "../STEP_3-databases/workflow-RUN_01-build_gigantic_blastp_databases/OUTPUT_pipeline/1-output/gigantic_blastp"
    selected_species = userConfig?.inputs?.selected_species ?: "INPUT_user/selected_species.txt"

    // Output settings
    output_dir = userConfig?.output?.base_dir ?: "OUTPUT_pipeline"
}

// ============================================================================
// EXECUTOR CONFIGURATION
// ============================================================================

executor {
    name = 'local'
    cpus = 4
    memory = '16 GB'
}

// ============================================================================
// PROCESS DEFAULTS
// ============================================================================

process {
    executor = 'local'

    // Fail-fast error handling (GIGANTIC standard for research pipelines)
    errorStrategy = 'terminate'
    maxRetries = 0
    maxErrors = 0

    // Default resources (STEP_4 is lightweight - just copying files)
    cpus = 2
    memory = '8 GB'
    time = '1h'

    withLabel: 'local' {
        executor = 'local'
    }
}

// ============================================================================
// MANIFEST
// ============================================================================

manifest {
    name = 'GIGANTIC-genomesDB-STEP_4'
    author = 'Eric Edsinger (with Claude Code AI)'
    description = 'Create final species set for downstream subprojects'
    version = '1.0.0'
    nextflowVersion = '>=21.04.0'
}

// ============================================================================
// REPORTS
// ============================================================================

report {
    enabled = false
}

timeline {
    enabled = false
}

dag {
    enabled = false
}
