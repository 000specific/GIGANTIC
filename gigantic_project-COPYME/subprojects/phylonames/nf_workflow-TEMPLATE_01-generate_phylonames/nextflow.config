// ============================================================================
// LOAD USER CONFIGURATION FROM YAML
// ============================================================================

import org.yaml.snakeyaml.Yaml

def loadConfig() {
    def configFile = new File("${projectDir}/phylonames_config.yaml")
    if (configFile.exists()) {
        def yaml = new Yaml()
        return yaml.load(configFile.text)
    }
    return [:]
}

def userConfig = loadConfig()

// ============================================================================
// PARAMETERS (from phylonames_config.yaml)
// ============================================================================

params {
    // Project settings
    project_name = userConfig?.project?.name ?: "my_project"
    species_list = userConfig?.project?.species_list ?: "INPUT_user/species_list.txt"

    // Output settings
    output_dir = userConfig?.output?.base_dir ?: "OUTPUT_pipeline"

    // NCBI taxonomy settings
    force_download = userConfig?.ncbi_taxonomy?.force_download ?: false
}

// ============================================================================
// EXECUTOR - Pattern A (Sequential/Local)
// ============================================================================

executor {
    name = 'local'
    cpus = 2
    memory = '8 GB'
}

// ============================================================================
// PROCESS DEFAULTS
// ============================================================================

process {
    executor = 'local'

    // Error handling - fail fast for research pipelines
    errorStrategy = 'terminate'
    maxErrors = 0

    // Default resources (lightweight for this pipeline)
    cpus = 1
    memory = '4 GB'
    time = '2h'
}

// ============================================================================
// MANIFEST
// ============================================================================

manifest {
    name = 'GIGANTIC-Phylonames'
    author = 'Eric Edsinger (with Claude Code AI)'
    description = 'Generate phylogenetic species identifiers from NCBI taxonomy'
    version = '1.0.0'
    nextflowVersion = '>=21.04.0'
}

